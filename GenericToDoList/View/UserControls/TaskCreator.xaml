<UserControl x:Class="GenericToDoList.View.UserControls.TaskCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericToDoList.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="460">
    <Border CornerRadius="30" Background="#1D1E24">
        <Grid Margin="20 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="Add new Task" VerticalAlignment="Center" 
                 FontSize="18" FontFamily="Inter" 
                 Foreground="#8E8E8E" BorderThickness="0" 
                 Background="Transparent" />
            <Ellipse Grid.Column="1" Height="50" Fill="#EDB057"/>
            <TextBlock Grid.Column="1" Text="+" VerticalAlignment="Center"
                   HorizontalAlignment="Center" FontSize="24" Foreground="#fff"/>
        </Grid>
    </Border>
</UserControl>
