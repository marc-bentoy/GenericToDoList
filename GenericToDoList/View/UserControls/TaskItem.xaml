<UserControl x:Class="GenericToDoList.View.UserControls.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericToDoList.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="460">
    <Border Background="#1D1E24" CornerRadius="30">
        <Grid Margin="20 20 20 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="This is a task to be done"
                   FontSize="16" Foreground="#fff" 
                   VerticalAlignment="Center" FontFamily="Inter"/>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Ellipse StrokeThickness="3" Stroke="#5F5F5F" Grid.Column="0" Height="30" Width="30"/>
                <Ellipse Fill="#FF5858" Grid.Column="1" Height="30" Width="30"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
